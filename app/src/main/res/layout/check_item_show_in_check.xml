<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:background="@drawable/ll_change_check_title_bg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_device"
                style="@style/ItemTitle"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:text="机型编号：" />

            <TextView
                android:id="@+id/tv_device_num"
                style="@style/ItemTitle"
                android:layout_toRightOf="@id/tv_device"
                android:text="GSQWER" />

            <LinearLayout
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_item"
                    style="@style/ItemTitle"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5dp"
                    android:text="当前调试项目：" />

                <TextView
                    android:id="@+id/tv_title"
                    style="@style/ItemTitle"
                    android:layout_toRightOf="@id/tv_item"
                    android:text="某某检测项目" />
            </LinearLayout>
            <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/ItemResult"
                    android:text="调试结论："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    style="@style/ItemResult"
                    android:id="@+id/tv_item_result"
                    android:text="合格"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="          "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:background="@drawable/split"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8">

            <LinearLayout
                android:background="@drawable/ll_content_bg"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:gravity="center"
                android:layout_height="match_parent">
                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:maxEms="1"
                    android:text="调试记录"
                    android:textSize="18sp"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/ll_content_bg"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5">
                    <TextView
                        android:text="详情"
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:layout_weight="0.6"
                        android:gravity="center"
                        android:textSize="15sp" />
                    <TextView
                        android:text="调试时间"
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:layout_weight="1.4"
                        android:gravity="center"
                        android:textSize="15sp" />
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_head"
                        android:layout_width="0dp"
                        android:layout_weight="2.5"
                        android:layout_height="match_parent">

                    </android.support.v7.widget.RecyclerView>
                    <TextView
                        android:text="结论"
                        style="@style/ItemHead" />
                    <TextView
                        android:text="检验员"
                        style="@style/ItemHead" />
                </LinearLayout>

                <TextView
                    android:background="@drawable/split_gray"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:scrollbars="vertical"
                    android:layout_weight="6">
                    <LinearLayout
                        android:id="@+id/ll_body"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                    </LinearLayout>
                </ScrollView>

            </LinearLayout>

            <LinearLayout
                android:background="#ccc"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent">

            </LinearLayout>

            <LinearLayout
                android:background="#aaa"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent">

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>