<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="user"
            type="com.kstech.zoomlion.model.session.UserInfo" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人信息"
                android:textSize="28sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="5dp"
                    android:layout_weight="8"
                    android:background="@drawable/ll_content_bg">

                    <ImageView
                        android:id="@+id/user_detail_iv_user"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:id="@+id/user_detail_iv_user_clear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/IndexTerminalNameStyle"
                        android:text="用户名：" />

                    <TextView
                        style="@style/IndexTerminalContentStyle"
                        android:text="@{user.username}" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/user_detail_ll_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.13"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/pic_edit_password" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:maxEms="1"
                    android:text="修改密码" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/IndexTerminalNameStyle"
                        android:text="姓名：" />

                    <TextView
                        style="@style/IndexTerminalContentStyle"
                        android:text="@{user.name}" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/IndexTerminalNameStyle"
                        android:text="生日：" />

                    <TextView
                        style="@style/IndexTerminalContentStyle"
                        android:text="@{user.birthday}" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/IndexTerminalNameStyle"
                        android:text="性别：" />

                    <TextView
                        style="@style/IndexTerminalContentStyle"
                        android:text="@{String.valueOf(user.sex?'男':'女')}" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/IndexTerminalNameStyle"
                        android:text="民族：" />

                    <TextView
                        style="@style/IndexTerminalContentStyle"
                        android:text="@{user.nation}" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/IndexTerminalNameStyle"
                        android:text="婚否：" />

                    <TextView
                        style="@style/IndexTerminalContentStyle"
                        android:text="@{String.valueOf(user.married?'是':'否')}" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/IndexTerminalNameStyle"
                        android:text="座机号码：" />

                    <TextView
                        style="@style/IndexTerminalContentStyle"
                        android:text="@{user.phoneNumber}" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/IndexTerminalNameStyle"
                        android:text="手机号码：" />

                    <TextView
                        style="@style/IndexTerminalContentStyle"
                        android:text="@{user.cellPhoneNumber}" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/IndexTerminalNameStyle"
                        android:text="联系地址：" />

                    <TextView
                        style="@style/IndexTerminalContentStyle"
                        android:text="@{user.address}" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/IndexTerminalNameStyle"
                        android:text="邮箱：" />

                    <TextView
                        style="@style/IndexTerminalContentStyle"
                        android:text="@{user.email}" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/IndexTerminalNameStyle"
                        android:text="学历：" />

                    <TextView
                        style="@style/IndexTerminalContentStyle"
                        android:text="@{user.education}" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/IndexTerminalNameStyle"
                        android:text="毕业学校：" />

                    <TextView
                        style="@style/IndexTerminalContentStyle"
                        android:text="@{user.graduatedFrom}" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</layout>
